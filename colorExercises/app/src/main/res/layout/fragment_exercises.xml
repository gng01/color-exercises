<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ExercisesFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_status"
        android:layout_margin="@dimen/title_text_margin"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    <TextView
        android:id="@+id/txt_username_exercises"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user name"
        android:textSize="@dimen/user_status_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level: "
            android:textStyle="bold"
            android:textSize="@dimen/user_status_text_size" />
        <Spinner
            android:id="@+id/spinner_levels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/txt_exerciseTitle"
        android:text="Exercises Title That Maybe Too Long hohohohohoho"
        android:textSize="@dimen/title_text_size"
        android:layout_margin="@dimen/title_text_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_status"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_exerciseTitle"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.ogaclejapan.arclayout.ArcLayout
            android:id="@+id/arc_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:arc_origin="center"
            app:arc_radius="168dp"
            app:arc_axisRadius="120dp"
            app:arc_freeAngle="false"
            app:arc_reverseAngle="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <Button
                android:id="@+id/btn_arc1"
                android:layout_width="@dimen/exercise_button_size"
                android:layout_height="@dimen/exercise_button_size"
                android:gravity="center"
                android:background="@drawable/ic_exercise_button_round_50"
                android:backgroundTint="@color/colorPrimary"
                />

            <Button
                android:id="@+id/btn_arc2"
                android:layout_width="@dimen/exercise_button_size"
                android:layout_height="@dimen/exercise_button_size"
                android:gravity="center"
                android:background="@drawable/ic_exercise_button_round_50"
                android:backgroundTint="@color/colorPrimary"
                />
            <Button
                android:id="@+id/btn_arc3"
                android:layout_width="@dimen/exercise_button_size"
                android:layout_height="@dimen/exercise_button_size"
                android:gravity="center"
                android:background="@drawable/ic_exercise_button_round_50"
                android:backgroundTint="@color/colorPrimary"
                />

            <Button
                android:id="@+id/btn_arc4"
                android:layout_width="@dimen/exercise_button_size"
                android:layout_height="@dimen/exercise_button_size"
                android:gravity="center"
                android:background="@drawable/ic_exercise_button_round_50"
                android:backgroundTint="@color/colorPrimary"
                />

            <Button
                android:id="@+id/btn_arc5"
                android:layout_width="@dimen/exercise_button_size"
                android:layout_height="@dimen/exercise_button_size"
                android:gravity="center"
                android:background="@drawable/ic_exercise_button_round_50"
                android:backgroundTint="@color/colorPrimary"
                />
            <Button
                android:id="@+id/btn_arc6"
                android:layout_width="@dimen/exercise_button_size"
                android:layout_height="@dimen/exercise_button_size"
                android:gravity="center"
                android:background="@drawable/ic_exercise_button_round_50"
                android:backgroundTint="@color/colorPrimary"
                />
            <Button
                android:id="@+id/btn_arc7"
                android:layout_width="@dimen/exercise_button_size"
                android:layout_height="@dimen/exercise_button_size"
                android:gravity="center"
                android:background="@drawable/ic_exercise_button_round_50"
                android:backgroundTint="@color/colorPrimary"
                />
            <Button
                android:id="@+id/btn_arc8"
                android:layout_width="@dimen/exercise_button_size"
                android:layout_height="@dimen/exercise_button_size"
                android:gravity="center"
                android:background="@drawable/ic_exercise_button_round_50"
                android:backgroundTint="@color/colorPrimary"
                />
            <Button
                android:id="@+id/btn_arc9"
                android:layout_width="@dimen/exercise_button_size"
                android:layout_height="@dimen/exercise_button_size"
                android:gravity="center"
                android:background="@drawable/ic_exercise_button_round_50"
                android:backgroundTint="@color/colorPrimary"
                />
            <Button
                android:id="@+id/btn_arc10"
                android:layout_width="@dimen/exercise_button_size"
                android:layout_height="@dimen/exercise_button_size"
                android:gravity="center"
                android:background="@drawable/ic_exercise_button_round_50"
                android:backgroundTint="@color/colorPrimary"
                />
            <Button
                android:id="@+id/btn_arc11"
                android:layout_width="@dimen/exercise_button_size"
                android:layout_height="@dimen/exercise_button_size"
                android:gravity="center"
                android:background="@drawable/ic_exercise_button_round_50"
                android:backgroundTint="@color/colorPrimary"
                />
            <Button
                android:id="@+id/btn_arc12"
                android:layout_width="@dimen/exercise_button_size"
                android:layout_height="@dimen/exercise_button_size"
                android:gravity="center"
                android:background="@drawable/ic_exercise_button_round_50"
                android:backgroundTint="@color/colorPrimary"
                />
        </com.ogaclejapan.arclayout.ArcLayout>

        <Button
            android:id="@+id/btn_exercise_main_color"
            android:layout_gravity="center"
            android:layout_width="@dimen/exercise_button_size"
            android:layout_height="@dimen/exercise_button_size"
            android:background="@drawable/ic_exercise_button_round_50"
            android:backgroundTint="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            />
        <ProgressBar
            android:id="@+id/progressbar_exercises"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/exercise_progress_bar"
            android:layout_height="@dimen/exercise_progress_bar"
            android:indeterminate="false"
            android:max="100"
            android:progress="50"
            android:layout_centerInParent="true"
            android:progressDrawable="@drawable/circular"
            android:secondaryProgress="100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>