<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/txt_exercise_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Match!"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="@dimen/title_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/title_text_margin"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/result_pair"
        app:layout_constraintBottom_toTopOf="@+id/exercise_result_control">

        <ImageView
            android:background="@drawable/ic_home_button_round_150"
            android:backgroundTint="#D8E7F0"
            android:id="@+id/btn_result_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/exercise_pair_offset"/>
        <ImageView
            android:background="@drawable/ic_home_button_round_150"
            android:backgroundTint="#D8E7F0"
            android:id="@+id/btn_result_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/exercise_pair_offset"/>
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/level_up_gif"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/animation_300_star"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/level_up_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="invisible"
            android:text="New Level Unlocked!"
            android:textSize="@dimen/title_text_size"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_pair"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/exercise_result_control">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Long tap on a color circle to add the color to your palettes"
            app:layout_constraintBottom_toTopOf="@id/btn_result_back"
            android:padding="12dp"
            android:textAlignment="center"></TextView>
        <Button
            android:background="@drawable/ic_baseline_navigate_before_50"
            android:backgroundTint="@color/colorPrimary"
            android:id="@+id/btn_result_back"
            android:layout_width="@dimen/control_button_size"
            android:layout_height="@dimen/control_button_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="invisible"/>
        <Button
            android:background="@drawable/ic_baseline_navigate_next_50"
            android:id="@+id/btn_result_next"
            android:layout_width="@dimen/control_button_size"
            android:layout_height="@dimen/control_button_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>